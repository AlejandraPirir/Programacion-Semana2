using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
namespace InvertirNumeros
{
    class Program
    {       
        static void Main(string[] args)
        {           
              String cad="";    
   Console.WriteLine("ingresa tus Numeros");
   String pal = Console.ReadLine();
   int t = pal.Length;
    for(int i=t-1;i>=0;i--){
        cad=cad+pal.Substring(i, 1);
    }
    Console.WriteLine(cad);               
           Console.ReadLine();
        }
    }
}
